<Window x:Class="PokemonBox.Models.PokemonAdditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonBox.Models"
        mc:Ignorable="d"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"


        Title="PokemonAdditionWindow" Height="600" Width="500">
    <StackPanel x:Name="spPokemonCreator">
        <ComboBox DisplayMemberPath="{Binding Species}"/>
        <Image gif:ImageBehavior.AnimatedSource="{Binding SpritePath}"/>
    </StackPanel>
</Window>
