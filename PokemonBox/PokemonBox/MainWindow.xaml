<Window x:Class="PokemonBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" x:Name="cmbSpeciesOptions" DisplayMemberPath="Species" SelectionChanged="cmbAttackTypes_SelectionChanged"/>

        <Grid x:Name="grdSelectedSpecies" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="txtAttack" FontSize="20" Text="{Binding BaseAttack}"/>
            <TextBlock Grid.Row="1" x:Name="txtSpecies" FontSize="20" Text="{Binding Species}"/>
        </Grid>
    </Grid>

</Window>
